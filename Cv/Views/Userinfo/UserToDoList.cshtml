@using Microsoft.AspNet.Identity
@using Cv.Models;
@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>What do you want to do here ?</h2>
<div class="container">
    <div class="UserForm">
        <ul class="list-group">
            <li><h4>Personal Information</h4></li>
            <hr />
            @{var dataSet = Session["Users"] as tbl_Member;
                CvEntities db = new CvEntities();
                var control = db.tbl_Userinfo.FirstOrDefault(c => c.fk_UserID == dataSet.UserID);

                if (control != null)
                {
                <li class="">@Html.ActionLink("Show my own information", "Show", "Userinfo")</li>
                }
                else
                {
                <li class="">@Html.ActionLink("Enter a new personal information", "Create", "Userinfo")</li>
                }

            <br />
            <li><h4>Education Information</h4></li>
            <hr />
            <li class="">@Html.ActionLink("Enter an education information", "Create", "Education")</li>
            <li class="">@Html.ActionLink("Edit  your education info", "Edit", "Education")</li>
            <li class="">@Html.ActionLink("Delete your education info", "Delete", "Education")</li>
            }
         </ul>
    </div>
</div>